<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".LogIn">

    <TextView
        android:id="@+id/userid_text"
        android:layout_width="100dp"
        android:layout_height="50dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:gravity="center"
        android:textSize="25dp"
        android:text="用户名"
        android:layout_marginStart="50dp"
        android:layout_marginTop="200dp"
        />
    <TextView
        android:id="@+id/password_text"
        android:layout_width="100dp"
        android:layout_height="50dp"
        app:layout_constraintStart_toStartOf="parent"
        android:textSize="25dp"
        app:layout_constraintTop_toBottomOf="@id/userid_text"
        android:gravity="center"
        android:text="密码"
        android:layout_marginStart="50dp"
        />
    <EditText
        android:id="@+id/userid_edittext"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:layout_marginTop="200dp"
        android:textSize="25dp"
        app:layout_constraintStart_toEndOf="@id/userid_text"
        app:layout_constraintTop_toTopOf="parent"
        android:hint="在此输入用户名"
        />

    <EditText
        android:id="@+id/password_edittext"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:inputType="textPassword"
        android:hint="在此输入密码"
        android:textSize="25dp"
        app:layout_constraintStart_toEndOf="@id/password_text"
        app:layout_constraintTop_toBottomOf="@id/userid_edittext" />
    <Button
        android:id="@+id/register_button"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/password_edittext"
        android:layout_marginTop="50dp"
        android:layout_marginStart="50dp"
        android:text="注册"
        android:onClick="launchRegisterActivity"
        android:textSize="25dp"
        />
    <Button
        android:id="@+id/login_button"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        app:layout_constraintStart_toEndOf="@id/register_button"
        app:layout_constraintTop_toBottomOf="@id/password_edittext"
        android:layout_marginTop="50dp"
        android:layout_marginStart="100dp"
        android:onClick="onLogin"
        android:text="登录"
        android:textSize="25dp"
        />
</androidx.constraintlayout.widget.ConstraintLayout>